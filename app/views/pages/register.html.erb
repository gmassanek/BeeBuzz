			<div class="row">
				<div class="span5"><p></p></div>
				<div class="span5">
	<%= link_to "About Us", about_path %> - <%= link_to "Contact us", contact_path %> - <%= link_to "BeeBuzz Blog", "http://jeanbahnik.com" %>
				</div>
				<div class="span5"><p></p></div>
			</div>
